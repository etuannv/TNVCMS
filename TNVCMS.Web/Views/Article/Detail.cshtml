@model TNVCMS.Domain.Model.T_News


<div class="divPanel notop page-content">

    <div class="breadcrumbs">
        @Html.MvcSiteMap().SiteMapPath()
    </div>

    <div class="row-fluid">

        
        <!--Edit Main Content Area here-->
        <div class="span9 articleDetail" id="divMain">

            <h1>@Model.Title</h1>
            <hr>
            @Html.Raw(HttpUtility.HtmlDecode(Model.ContentNews.Replace(@"<hr />", "")))
            <br />
            <div>@Html.Action("GetTags", new { @id = Model.ID, @taxonomy = TNVCMS.Utilities.Constants.TAXONOMY_TAG })</div>
        </div>
        <div id="contentInnerSeparator"></div>
        <!--/End Main Content Area here-->
        <!--Edit Sidebar Content here-->
        <div class="span3">
            <h3 class="title-full">Dịch vụ khác</h3>
            @Html.Action("GetRelatedNews", "Article", new { newsId = Model.ID, @limit = 5 })
            <h3 class="title-full">Hình ảnh</h3>
            @Html.Action("GetSlideOne", "Home",new {id = 6, width = "251px", height = "180px"})
        </div>
        <!--/End Sidebar Content -->
    </div>

    <div id="footerInnerSeparator"></div>
</div>
