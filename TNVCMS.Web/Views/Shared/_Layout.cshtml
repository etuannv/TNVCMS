    <!--[if IE 7]>
        <link rel="stylesheet" href="~/Content/themes/hoaan/scripts/fontawesome/css/font-awesome-ie7.min.css">
    <![endif]-->

    <link href="~/Content/themes/hoaan/scripts/carousel/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/hoaan/scripts/camera/css/camera.css" rel="stylesheet" type="text/css" />

