    <link href="~/Content/themes/hoaan/scripts/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/themes/hoaan/scripts/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
